<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jchen.bean.UserMapper">
    <resultMap id="UserMap" type="com.jchen.bean.User">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
    </resultMap>

    <select id="getUserByUsernameAndPassword" resultMap="UserMap" parameterType="User">
        SELECT id, username, password, age FROM user WHERE username = #{username} AND password = #{password}
    </select>
</mapper>